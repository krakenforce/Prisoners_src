<AnchorPane prefHeight="434.0" prefWidth="543.0" styleClass="root" stylesheets="@style.css"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="Application.Controller.LoginUiController">
   <children>
      <AnchorPane layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="509.0">
         <children>
            <ImageView fitHeight="181.0" fitWidth="488.0" layoutX="11.0" layoutY="10.0" pickOnBounds="true">
               <image>
                  <Image url="@../Photos/Other/960x0.jpg" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="61.0" layoutY="129.0" prefHeight="271.0" prefWidth="421.0" styleClass="cardPane">
         <children>
            <ImageView fitHeight="57.0" fitWidth="75.0" layoutX="173.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Photos/Other/police-officer-18-774599.png" />
               </image>
            </ImageView>
            
            <Hyperlink fx:id="hlForgetPW" layoutX="135.0" layoutY="231.0" onAction="#forgetPW" text="Forget password?" />
            <ImageView fitHeight="23.0" fitWidth="27.0" layoutX="27.0" layoutY="84.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Photos/Other/avatar-icon-png-7.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="25.0" fitWidth="27.0" layoutX="26.0" layoutY="123.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Photos/Other/lock-1692127-1439986.png" />
               </image>
            </ImageView>
            <CheckBox fx:id="cbShowPW" layoutX="62.0" layoutY="163.0" mnemonicParsing="false" onAction="#showPassword" prefHeight="17.0" text="Show password" textFill="#208bb9" />
            <TextField fx:id="tfUsername" layoutX="62.0" layoutY="83.0" prefHeight="25.0" prefWidth="292.0" promptText="Username">
               <font>
                  <Font size="13.0" />
               </font></TextField>
            <Button fx:id="btnLogin" layoutX="281.0" layoutY="168.0" mnemonicParsing="false" onAction="#logIn" prefHeight="34.0" prefWidth="74.0" styleClass="confirmBtn" stylesheets="@style.css" text="Login" />
            <Label fx:id="prompt" layoutX="30" layoutY="202.0" prefHeight="17.0"  text="Welcome to Kraken's Prison Inc." />
            <TextField fx:id="tfShowPW" layoutX="62.0" layoutY="122.0" prefHeight="29.0" prefWidth="292.0" promptText="Password">
               <font>
                  <Font size="13.0" />
               </font>
            </TextField>
            <Label fx:id="pwLabel" visible="false" text="_Password" mnemonicParsing="true"/>
            <PasswordField fx:id="pfPW" layoutX="62.0" layoutY="123.0" prefHeight="25.0" prefWidth="292.0" promptText="Password">
               <font>
                  <Font size="13.0" />
               </font>
            </PasswordField>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
