<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tiendat.PrisonManagenmentSystem.Controller.Prisoner.ControllerPrisoners">
<children>
    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <JFXButton onAction="#addTabAddPrisoner" styleClass="ButtonPane" stylesheets="@style.css" text="Add Prisoner" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font></JFXButton>
            <JFXButton onAction="#addTabListPrisoner" styleClass="ButtonPane" stylesheets="@style.css" text="List Prisoner" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font></JFXButton>
            <JFXButton onAction="#addSearchPrisoner" styleClass="ButtonPane" stylesheets="@style.css" text="Search Prisoner" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font></JFXButton>

        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </HBox>
    <JFXTabPane fx:id="tabpane_Prisoner" tabClosingPolicy="ALL_TABS" />
</children>
</VBox>
