                <Label text="State" GridPane.rowIndex="8">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <Label text="City" GridPane.rowIndex="9">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <JFXTextField fx:id="text_PrisonerName" GridPane.columnIndex="1" />
                <JFXTextField fx:id="text_Phone" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <JFXTextArea fx:id="text_Adress" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <JFXRadioButton fx:id="radio_Male" text="Male">
                     <toggleGroup>
                        <ToggleGroup fx:id="gender" />
                     </toggleGroup></JFXRadioButton>
                        <JFXRadioButton fx:id="radio_Female" text="Female" toggleGroup="$gender" />
                    </children>
                </HBox>
                <JFXComboBox fx:id="combo_Crime" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <JFXComboBox fx:id="combo_Punishment" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <JFXComboBox fx:id="combo_State" onAction="#LoadCity" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                <JFXComboBox fx:id="combo_City" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="9" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
               <children>
                  <JFXButton onAction="#UpdatePrisoner" prefHeight="43.0" prefWidth="117.0" styleClass="confirmBtn" text="Update" />
                  <JFXButton onAction="#DeletePrisoner" prefHeight="25.0" prefWidth="67.0" styleClass="cancelButton" text="Delete" />
               </children>
            </HBox>
            <JFXDatePicker fx:id="date_DateOfBirth" prefHeight="28.0" prefWidth="392.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <JFXDatePicker fx:id="date_DateOfAdrress" prefHeight="28.0" prefWidth="411.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
