        </GridPane>
        <VBox alignment="TOP_CENTER">
            <children>
            <Pagination fx:id="pagination_Images" prefHeight="400.0" prefWidth="298.0" />
                <JFXButton onAction="#UpLoadImages" text="Upload Image" />
            </children>
        </VBox>
      <VBox prefHeight="653.0" prefWidth="440.0">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="61.0" text="Search By" />
                  <JFXComboBox fx:id="combo_SearchStyle" onAction="#SelectStyleSearch" prefHeight="25.0" prefWidth="87.0" />
                  <JFXTextField prefHeight="25.0" prefWidth="153.0" />
                  <JFXButton onAction="#SearchPrisoner" prefWidth="100.0" styleClass="confirmBtn" stylesheets="@style.css" text="Search" />
               </children>
            </HBox>
            <Pagination fx:id="pagination_Prisoners" prefHeight="628.0" prefWidth="447.0" />
         </children>
      </VBox>
